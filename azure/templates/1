<script type="text/javascript">
  $("#send").click(function(event){
    event.preventDefault();
    var choice = confirm("It is going to take 10 min to provision and configure the cluster.Do you wish to confirm?");
    if(choice == true){
      form = $("#form");
      var data = new FormData(form[0]);
      $("#form").submit();
      $.ajax({
        method: "post",
        url: "/baseaks/",
        cache: false,
        processData: false,
        contentType: false,
        data: data,
      })
      setTimeout(function(){
      window.location.href = "/aksinfo/";
      },200);
    }
  })
</script>






